// Simple test for implemented features

// Basic lambda expressions
let square = (x) => x * x
let add = (a, b) => a + b

show "Square of 5: " + square(5)
show "Add 3 + 7: " + add(3, 7)

// Logical operators with short-circuit evaluation
let x = 5
let y = 10

show "x > 3 and y < 15: " + (x > 3 and y < 15)
show "x > 10 or y > 5: " + (x > 10 or y > 5)

// Arrays
let numbers = [1, 2, 3, 4, 5]
show "Numbers: " + numbers

// Objects
let person = {
    "name": "Alice",
    "age": 30
}
show "Person: " + person

// For loops
show "Counting from 1 to 5:"
for i from 1 to 5 do
    show "Count: " + i
end

// Type coercion in string concatenation
let num = 42
let pi = 3.14
show "Number: " + num
show "Pi: " + pi
show "Boolean: " + true